@model Data.Models.User


        <form asp-action="SaveInfo" method="post">
            <input type="hidden" asp-for="UserType" class="form-control" />
            <input type="hidden" asp-for="ConfirmCode" class="form-control" />
            <input type="hidden" class="form-check-input" asp-for="IsConfirmed" />
            <input type="hidden" class="form-check-input" asp-for="IsDeleted" />
            <input type="hidden" class="form-check-input" asp-for="IsAdmin" />
            <input type="hidden" asp-for="LastActivity" class="form-control" />
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="CreatedDate" class="form-control" />
            <input type="hidden" asp-for="Order" class="form-control" />
            <input type="hidden" asp-for="PhoneNumber" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input id="phone" value="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input type="text" asp-for="BirthDate" value="@Model.BirthDate.ToString("MM-dd-yyyy")" class="form-control datepicker" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
                    <input type="hidden" asp-for="UserName" class="form-control" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input readonly="" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resource.Save" class="btn btn-primary w-25" />
            </div>
        </form>

