@model IQueryable<Data.Models.Chalets.Reservation>
@{
    ViewData["Title"] = "صفحتي";
    //Layout = "~/Views/Shared/_EndUser_Profile_Layout.cshtml";
    Layout = "~/Views/Shared/_EndUser_Profile_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h4>@ViewBag.Title</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="style-msg2 successmsg">
                    <div class="sb-msg">
                        <h4 class="mb-1">@Resource.MyReservations</h4>
                        <h5 class="mb-0">@ViewBag.Reservations</h5>
                    </div>
                    <div class="msgtitle">
                        <a href="~/User/Reservations">@Resource.ExplorerReservations</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="style-msg2 errormsg">
                    <div class="sb-msg">
                        <h4 class="mb-1">@Resource.MyFiverates</h4>
                        <h5 class="mb-0">@ViewBag.Fiverates</h5>
                    </div>
                    <div class="msgtitle">
                        <a href="~/User/Fiverates">@Resource.ExplorerFiverate</a>
                    </div>
                </div>
            </div>
        </div>
        <h4>@Resource.UpcomingReservations</h4>
        <div class="row">
            @foreach (var item in Model)
            {
                var unit = item.Unit;
                var image = Url.Content("~/images/noimg.jpg");
                if (unit.UnitImages.Count > 0)
                {
                    var uitImage = unit.UnitImages.OrderByDescending(c => c.IsPrimary).FirstOrDefault();
                    image = Url.Content("~/" + uitImage.File.FileContentMin);
                }



                <div class="real-estate-item portfolio-item col-12 col-md-6 col-lg-4">
                    <div class="real-estate-item-image">
                        <div class="label badge badge-danger bg-color2" style="background-color:rgb(0 0 0 / 52%) !important">
                            @unit.Views <i class="icon-eye"></i>
                        </div>
                        <a href="#">
                            <img src="@image" class="w-100" alt="Image 1">
                        </a>
                        <div class="real-estate-item-price" style="direction:rtl">
                            @unit.DayPrice @Resource.Currency<span>@Resource.PricePerNight</span>
                        </div>
                        <div class="real-estate-item-info clearfix" data-lightbox="gallery">
                            <a href="#" data-toggle="tooltip" title="Like">
                                <i class="icon-star3 text-warning"></i> 24
                            </a>
                            <a href="#" data-toggle="tooltip" title="Images" data-lightbox="gallery-item">
                                @Resource.UnitCode (@unit.Code)
                            </a>
                        </div>
                    </div>

                    <div class="real-estate-item-desc p-0">
                        <h3>
                            <a href="@Url.Action("Index","Unit",new {id=unit.Id,DateFrom=DateTime.Now,DateTo=DateTime.Now })">
                                @unit.Name
                                @if (unit.Number > 0)
                                {
                                    <span>(@unit.Number)</span>
                                }
                                @if (unit.IsSimilar)
                                {
                                    <span>(@unit.Number)</span>
                                }
                            </a>
                        </h3>
                        <span><i class="icon-location"></i> @unit.Chalet.City.CityName, @unit.Chalet.Neighborhood</span>

                    </div>
                </div>

            }
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(function () {
            $('.datepicker').datepicker({
                autoclose: true,
                startDate: "today",
                todayHighlight: true,
                format: "mm/dd/yyyy",
            });
        });

        $("#info").addClass("active");
    </script>
}


